        replaced = f[/^..\s(?:.* -> )?/]
        format("%-#{max_length}s  # %-s", f.sub(/^(..) (.* -> )?/, 'git add --all '), replaced)
      end
      file.puts start_files
      file.puts
      file.puts '# project files'
